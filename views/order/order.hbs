<!-- Cart view section -->
<section id="aa-myaccount">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="aa-myaccount-area">
          <div class="col-md-6">
            <form action="/checkout" class="aa-login-form" method="post" id="payment-form">
            <h4 class="font-weight-bold text-danger">Thông Tin Giao Dịch</h4>
            {{#if mess}}
            <div class="form-group color-red">
              <input type="text" value="{{mess}}" readonly>
            </div>
            {{/if}}
            <div class="aa-myaccount-register">
                <div class="form-group">
                  <label for="">Tên người nhận</label>
                  <input type="text" value="{{user.Name}}" name="Name">
                </div>
                <div class="form-group">
                  <label for="">Địa chỉ người nhận</label>
                  <input type="text" value="{{user.Address}}" name="Address">
                </div>
                <div class="form-group">
                  <label for="">Số điện thoại người nhận</label>
                  <input type="text" value="{{user.Phonenumber}}" name="Phonenumber">
                </div>
            </div>
              <div class="form-row">
                <label for="card-element">
                  Thẻ hoặc thẻ ghi nợ
                </label>
                <div id="card-element">
                </div>
                <div id="card-errors" role="alert"></div>
              </div>
            </br>
            <input type="hidden" name="Sum" value="{{sum}}">
            <input class="aa-browse-btn col-md-offset-5" type="submit" value="Xác nhận mua hàng">
          </form>
          </div>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript" src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="/javascripts/checkout.js"></script>
