<form action="/activated" method="POST">
    <div class="form-group pt-250 pb-100 item-center">
        {{#if mess}}
            <input type="text" class="form-control width-300" value="{{mess}}">
        {{/if}}
        <label class="pb-10" for="name">Nhập email để kích hoạt tài khoản của bạn</label>
        <input type="email" class="form-control  width-300" name="email">
        <br>
        <input type="submit" class="btn btn-default aa-review-submit" value="Gửi">
    </div>
</form>